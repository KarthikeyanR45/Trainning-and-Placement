public class Solution {
    public int[] shortestToChar(String s, char c) {
        int n = s.length();
        int[] answer = new int[n];

        for (int i = 0; i < n; i++) {
            int minDist = n; // maximum possible distance is n
            for (int j = 0; j < n; j++) {
                if (s.charAt(j) == c) {
                    int dist = Math.abs(i - j);
                    if (dist < minDist) {
                        minDist = dist;
                    }
                }
            }
            answer[i] = minDist;
        }

        return answer;
    }
}
