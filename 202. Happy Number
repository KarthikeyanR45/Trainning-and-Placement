class Solution {
    public boolean isHappy(int n) {
        int s, r;
        int t = n;
        for (int i = 0; i < 100; i++) {
            s = 0;
            while (t > 0) {
                r = t % 10;
                s = s + (r * r);
                t = t / 10;
            }

            if (s == 1) {
                return true;
            }
            t = s;
        }

        return false;
    }
}
